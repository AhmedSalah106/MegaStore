@model MegaMarket.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-box"></i> Add New Product</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SaveProduct" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag"></i> Product Name
                            </label>
                            <input asp-for="Name" class="form-control border-success" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-dollar-sign"></i> Price
                            </label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control border-success" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Brand -->
                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label fw-bold">
                                <i class="fas fa-industry"></i> Brand
                            </label>
                            <input asp-for="Brand" class="form-control border-success" required />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <!-- Vendor -->
                        <div class="mb-3">
                            <label asp-for="VendorId" class="form-label fw-bold">
                                <i class="fas fa-user-tie"></i> Vendor
                            </label>
                            <select asp-for="VendorId" class="form-select border-success" required>
                                <option value="">Select Vendor</option>
                                <!-- Dynamic options should be loaded here -->
                            </select>
                            <span asp-validation-for="VendorId" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">
                                <i class="fas fa-list"></i> Category
                            </label>
                            <select asp-for="CategoryId" class="form-select border-success" required>
                                <option value="">Select Category</option>
                                <!-- Dynamic options should be loaded here -->
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control border-success" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Amount -->
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-bold">
                                <i class="fas fa-boxes"></i> Amount
                            </label>
                            <input asp-for="Amount" type="number" class="form-control border-success" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save"></i> Save Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

@section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            // Enable Bootstrap validation
            (function () {
                'use strict';
                let forms = document.querySelectorAll('.needs-validation');
                Array.from(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();
        </script>
}
