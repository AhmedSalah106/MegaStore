@model List<MegaMarket.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-box-open"></i> Product List
        </h2>
    </div>

    <div class="card shadow-lg p-4">
        @if (Model == null || !Model.Any())
        {
                <div class="alert alert-warning text-center" role="alert">
                    No products available.
                </div>
        }
        else
        {
                <table class="table table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-tag"></i> Name</th>
                            <th><i class="fas fa-dollar-sign"></i> Price</th>
                            <th><i class="fas fa-industry"></i> Brand</th>
                            <th><i class="fas fa-store"></i> Vendor</th>
                            <th><i class="fas fa-th-list"></i> Category</th>
                            <th><i class="fas fa-file-alt"></i> Description</th>
                            <th><i class="fas fa-box"></i> Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in Model)
                    {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.Price.ToString("F2")</td>
                                    <td>@product.Brand</td>
                                    <td>@product.VendorId</td>
                                    <td>@product.CategoryId</td>
                                    <td>@product.Description</td>
                                    <td>@product.Amount</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@product.Name" class="btn btn-warning btn-sm shadow-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Name" class="btn btn-danger btn-sm shadow-sm" onclick="return confirmDelete('@product.Name');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
        }
    </div>
</div>

<!-- Custom JavaScript for confirmation -->
<script>
    function confirmDelete(name) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to delete " + name + "?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (!result.isConfirmed) {
                event.preventDefault();
            }
        });
    }
</script>

<!-- Bootstrap + FontAwesome + SweetAlert -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
