@model List<MegaMarket.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Your Products - MegaStore";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4 fw-bold">Your Products</h2>

    @if (Model != null && Model.Count > 0)
    {
                <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                                <div class="col">
                                    <div class="card shadow-sm border-0">
                                        <!-- Display Product Image -->
                                        <img src="@product.imageURL" class="card-img-top product-img" alt="Product Image">

                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">@product.Name</h5>
                                            <p class="card-text text-muted">@product.Brand</p>

                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-primary">@GetCategoryName(product.CategoryId)</span>
                                                <span class="text-success fw-bold">$@product.Price</span>
                                            </div>

                                            <p class="mt-2 text-secondary">Stock: <strong>@product.Amount</strong></p>

                                            <!-- Centered Add to Cart Button -->
                                            <div class="text-center mt-3">
                                                <a href="@Url.Action("AddToCart", "Product", new { id = product.Name })" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> AddToCart
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            }
                </div>
    }
    else
    {
                <div class="alert alert-info text-center" role="alert">
                    <strong>No products found!</strong> Add products to start selling.
                </div>
    }
</div>

<!-- Helper Method to Get Category Name -->
@functions {
    public string GetCategoryName(int categoryId)
    {
        return categoryId switch
        {
            1 => "Electronics",
            2 => "Clothing",
            3 => "Home & Kitchen",
            4 => "Books",
            5 => "Beauty & Personal Care",
            _ => "Other"
        };
    }
}

<!-- Custom Styles -->
<style>
    .product-img {
        height: 200px;
        object-fit: cover;
        border-radius: 10px 10px 0 0;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
    }

    .btn {
        width: 100%;
    }
</style>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
